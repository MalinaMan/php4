{% extends 'layout.html.twig' %}

{% block content %}

	<div class="col">
		<div class="row">
			<h3>{{ news.title }}</h3>
			<hr>
			<p>{{ news.description }}</p>
		</div>
		<div class="row mb-4">
			<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			  <div class="carousel-inner" role="listbox">
			    {% for filename in news.files %}
				    <div class="carousel-item{% if loop.first %} active{% endif %}">
				      <img class="d-block img-fluid" src="/img/{{ filename }}" alt="">
				    </div>
				{% endfor %}
			  </div>
			  {% if news.files|length > 1 %}
			  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-5">
				<ul id="statViewList" class="list-unstyled"></ul>
			</div>
			<div class="col-sm-7">
				<ul id="tagsList" class="list-unstyled list-inline">
					{% for tag in news.tags %}
						<li class="list-inline-item"><a class="link_without_decor" href="/news_tag_list/{{ tag[1] }}">{{ tag[0] }}</a></li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>

{% endblock %}


{% block javascripts %}
    <script src="/js/statistics.js"></script>
{% endblock %}
